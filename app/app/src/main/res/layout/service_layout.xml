<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:background="@drawable/rounded_corner_map">

    <ImageView
        android:id="@+id/imageViewCallScreen"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:padding="8dp"
        android:src="@drawable/phone2" />

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_toRightOf="@+id/imageViewCallScreen">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.95"
                android:gravity="center_vertical|left"
                android:text="Unknown Number"
                android:textColor="#0B0B61"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/operator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="3dp"
                android:layout_weight="0.95"
                android:gravity="center_vertical|left"
                android:text="Sorry! Unknown Operator"
                android:textColor="#0B0B61"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewCallScreen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_weight="0.95"
                android:ellipsize="marquee"
                android:gravity="center_vertical|left"
                android:textColor="#0B0B61"
                android:textSize="14dp"
                android:textStyle="bold" />
        </LinearLayout>

        <Button
            android:id="@+id/button1"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="35dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/rounded_corner"
            android:text="Close"
            android:textColor="@android:color/black"
            android:textSize="10dp" />

        <Button
            android:id="@+id/Button01"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="35dp"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/button1"
            android:background="@drawable/rounded_corner"
            android:text="Min"
            android:textColor="@android:color/black"
            android:textSize="10dp" />
    </RelativeLayout>

</RelativeLayout>